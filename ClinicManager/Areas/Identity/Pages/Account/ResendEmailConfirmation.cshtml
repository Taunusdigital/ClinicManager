@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container pt-3">
    <div>
        <h1 class="display-5 text-center">Bestätigunslink senden</h1>
        <p class="fs-5 mt-5">Bitte geben Sie Ihre E-Mailadresse an, an welche der Bestätigungslink versandt werden soll.<br /> 
    </div>
    <div class="row">
        <div class="col-xl-4 offset-xl-4 col-md-12 justify-content-center">
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mt-3 mb-3" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">E-Mail:</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-tcm">Senden</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
